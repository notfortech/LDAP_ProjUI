{
  "report_type": "CIF_Report",
  "version": "1.0",
  "sections": [
    {
      "section_id": "cif_score",
      "description": "Overall capability readiness score derived from skill aggregation",
      "fields": ["score_value", "band", "interpretation"]
    },
    {
      "section_id": "skills_snapshot",
      "description": "Skill-wise strengths and growth narratives",
      "fields": [
        "skill_id",
        "display_name",
        "score",
        "band",
        "strength",
        "growth_edge"
      ]
    },
    {
      "section_id": "pathway_summary",
      "description": "Recommended domains and learning readiness",
      "fields": [
        "primary_domains",
        "secondary_domains",
        "learning_readiness"
      ]
    },
    {
      "section_id": "role_fit_summary",
      "description": "Role-fit insights where applicable",
      "fields": [
        "role_id",
        "display_name",
        "fit_percent",
        "fit_band",
        "interpretation"
      ]
    },
    {
      "section_id": "validation_metadata",
      "description": "Transparency and governance indicators",
      "fields": [
        "skills_evaluated",
        "signals_used",
        "confidence_level",
        "expert_reviewed"
      ]
    }
  ],
  "supported_contexts": [
    "Education",
    "Employer",
    "Learning_and_Development"
  ]
}
